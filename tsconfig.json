{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext", // 编译目标
    // "isolatedModules": true, // 设为 true 时将每个文件转换为一个单独的模块
    "useDefineForClassFields": true, //
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "server/**/*.ts"]
}
