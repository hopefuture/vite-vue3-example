{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "outDir": "dist-server",
    "paths": {
      "*": [
        "node_modules/*",
        "server/types/*"
      ]
    }
  },
  "include": ["server/**/*"]
}